    <script>
        function sendToWhatsApp() {
            var username = document.getElementById("username").value;
            var akunPengembalian = document.getElementById("akunPengembalian").value;
            var namaPemilikPengembalian = document.getElementById("namaPemilikPengembalian").value;

            var phoneNumber = "6283166570663"; // Prefix Indonesia: +62
            var message = `*Pengajuan Edit Data* %0A*Username Akun*: ${username} %0A*Username Akun Pengembalian*: ${akunPengembalian} %0A*Nama Pemilik Akun Pengembalian*: ${namaPemilikPengembalian}`;
            var url =  `https://wa.me/${phoneNumber}?text=${message}`;
            window.open(url, '_blank');
        }
    </script>
